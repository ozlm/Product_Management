@model IEnumerable<mongodb_mvc.Models.Sale>
@{
    ViewBag.Title = "SaleList";
}

<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>

<style>
    .scrollit {
        overflow: scroll;
        height: 100px;
    }
</style>
<body >
    <div id="throbber" style="display:none; min-height:120px;"></div>
    <div id="noty-holder"></div>
    <div id="wrapper">
        <!-- Navigation -->

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <div class="center-block">
                    <h2>PRODUCT MANAGEMENT SYSTEM</h2>
                </div>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">

                <li class="dropdown">
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-fw fa-user-plus"></i>Home <i class="fa fa-fw fa-angle-left pull-right"></i></a></li>
                    <li><a href="@Url.Action("List", "Product")"><i class="fa fa-fw fa-user-plus"></i>Product List <i class="fa fa-fw fa-angle-left pull-right"></i></a></li>
                    <li>
                        <a href="@Url.Action("SaleList","Sale")"><i class="fa fa-fw fa-paper-plane-o"></i> Sale List</a>
                    </li>
                    <li><a href="@Url.Action("Create", "Product")"><i class="fa fa-fw fa fa-question-circle"></i> Add New Product</a></li>

                    <li><a href="@Url.Action("Index","Sale")"><i class="fa fa-fw fa fa-question-circle"></i> Chart</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper" >
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row" id="main">
                    <div class="col-sm-12 col-md-12 well" id="content">

                        <center>
                            <div class="scrollit" style="height:600px;">
                                <table border="1">
                                    <div class="row">
                                        <thead>
                                            <link href="~/css/bootstrap.css" rel="stylesheet" />
                                            <table class="table table-striped table-hover " style="height:400px;">
                                                <thead>
                                                    <tr>
                                                        <th>Product ID</th>
                                                        <th>Count</th>
                                                        <th>Sale Date</th>
                                                        <th>Sale Price</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var item in Model)
                                                    {

                                                        <tr class="active">
                                                            <td>@item.productId</td>
                                                            <td>@item.count</td>
                                                            <td>@item.sale_date</td>
                                                            <td>@item.sale_price</td>
                                                            <td><a href="@Url.Action("SaleDelete", "Sale", new { id = item._id })" class="btn btn-primary">Delete</a></td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>

                                            <table>
                                                <a href="@Url.Action("ExcelSale","Sale")" class="btn btn-success">Export Excel List</a>
                                            </table>
                                        </thead>

                                    </div>
                                </table>
                            </div>
                            
                    </div>
               @* </div> *@ 
                </center>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div><!-- /#wrapper -->
</body>

<script src="~/js/bootstrap.js"></script>
<script src="~/js/bootstrap.min.js"></script>

